<h1>Update Pet</h1>


<form action="/pets/<%=@pet.id%>" method="POST">
  <label for="pet_name"></label>
  <input type="text" name="pet_name" id="pet_namee">

  <%@owners.each do |owner|%>
  <label for="<%=owner.id%>"><%=owner.name%></label>
    <input type="checkbox" name="<%=owner.name%>" id="<%=owner.id%>" value="<%=owner.id%>"<%='checked' if @pet.owner == owner%>></input>
  <%end%>
  <h2>or make a new owner</h2>
  <input type="text" name="owner[name]" id="owner_name">

  <input type="submit" value="Update Pet">

</form>
