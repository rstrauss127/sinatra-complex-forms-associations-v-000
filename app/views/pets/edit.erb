<h1>Update Pet</h1>


<form action="/pets/<%=@pet.id%>" method="POST">
  <label for="pet_name"></label>
  <input type="text" name="pet_name" id="pet_name">

  <% @owners.all.each do |owner| %>
    <input type="checkbox" name="<%=owner.id%>" id="<%=owner.id%>" value="<%=owner.name%>">
  <%end%>
  <h2>or make a new owner</h2>
  <input type="text" name="pet[owner_name]" id="owner_name">

  <input type="submit" value="Create Pet">

</form>
