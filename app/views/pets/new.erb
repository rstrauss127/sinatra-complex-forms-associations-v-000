<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label for="pet_name"></label>
  <input type="text" name="pet[name]" id="pet_name">

  <% @owners.all.each do |owner| %>
    <input type="checkbox" name="pet[owner_id][]" id="<%=owner.id%>" value="<%=owner.id%>">
  <%end%>
  <h2>or make a new owner</h2>
  <input type="text" name="pet[owner_name]" id="owner_name">

  <input type="submit" value="Create Pet">
</form>
